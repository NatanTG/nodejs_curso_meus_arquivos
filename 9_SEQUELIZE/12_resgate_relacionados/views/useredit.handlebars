<h1>Editar</h1>
<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome</label>
        <input type="text" name="name" placeholder="Digite seu nome" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissão</label>
        <input type="text" name="occupation" placeholder="Digite sua profissão" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsLetter}}
        <input type="checkbox" name="newsLetter" checked>
        {{else}}
        <input type="checkbox" name="newsLetter">
        {{/if}}
        <label for="newsLetter">Deseja receber nossa newsletter?</label>
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="userId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" placeholder="Digite o nome da rua">
        </div>
        <div class="form-control">
            <label for="number">Número</label>
            <input type="text" name="number" placeholder="Digite o número">
        </div>
        <div class="form-control">
            <label for="city">Cidade</label>
            <input type="text" name="city" placeholder="Digite o nome da cidade">
        </div>
        <input type="submit" value="Cadastrar">
    </form>
    <div class="address-list">
        <h2>Lista de endereços:</h2>
        {{#each user.Addresses}}
        <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
        {{/each}}
    </div>
</div>